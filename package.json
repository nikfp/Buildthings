{
	"name": "shop",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "vite dev",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"gen": "pnpm exec prisma migrate dev",
		"test": "pnpm test:pushdb && vitest",
		"test:pushdb": "DATABASE_URL=file:./dev_test.db pnpm exec prisma db push",
		"test:watchschema": "npm-watch",
		"coverage": "vitest run --coverage"
	},
	"watch": {
		"test": "**/*/schema.prisma"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@testing-library/svelte": "^3.1.3",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.5.1",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.33.1",
		"@typescript-eslint/parser": "^5.33.1",
		"@zerodevx/svelte-toast": "^0.7.2",
		"c8": "^7.12.0",
		"concurrently": "^7.3.0",
		"eslint": "^8.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"node-sass": "^7.0.1",
		"nodemon": "^2.0.19",
		"npm-watch": "^0.11.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prisma": "^4.2.1",
		"reflect-metadata": "^0.1.13",
		"svelte": "^3.49.0",
		"svelte-check": "^2.8.0",
		"svelte-preprocess": "^4.10.7",
		"tslib": "^2.4.0",
		"typescript": "~4.6.4",
		"vite": "^3.0.8",
		"vitest": "^0.12.10"
	},
	"type": "module",
	"dependencies": {
		"@felte/reporter-svelte": "^1.1.3",
		"@felte/validator-zod": "^1.0.11",
		"@prisma/client": "^4.2.1",
		"@trpc/client": "^9.27.0",
		"@trpc/server": "^9.27.0",
		"agnostic-svelte": "^1.1.27",
		"bcrypt": "^5.0.1",
		"cookie": "^0.5.0",
		"felte": "^1.2.3",
		"shop": "link:",
		"tozod": "^3.0.0",
		"trpc-sveltekit": "^2.3.0",
		"uuid": "^8.3.2",
		"zod": "^3.18.0"
	}
}
