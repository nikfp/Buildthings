{
	"name": "shop",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"start": "vite dev",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"gen": "pnpm exec prisma migrate dev",
		"test": "pnpm test:pushdb && vitest",
		"test:pushdb": "DATABASE_URL=file:./dev_test.db pnpm exec prisma db push",
		"test:watchschema": "npm-watch",
		"coverage": "vitest run --coverage"
	},
	"watch": {
		"test": "**/*/schema.prisma"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/kit": "next",
		"@testing-library/svelte": "^3.1.2",
		"@types/bcrypt": "^5.0.0",
		"@types/cookie": "^0.5.1",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"@zerodevx/svelte-toast": "^0.7.2",
		"c8": "^7.11.3",
		"concurrently": "^7.2.1",
		"eslint": "^8.12.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"node-sass": "^7.0.1",
		"nodemon": "^2.0.16",
		"npm-watch": "^0.11.0",
		"prettier": "^2.5.1",
		"prettier-plugin-svelte": "^2.5.0",
		"prisma": "^4.1.1",
		"reflect-metadata": "^0.1.13",
		"svelte": "^3.44.0",
		"svelte-check": "^2.2.6",
		"svelte-preprocess": "^4.10.1",
		"tslib": "^2.3.1",
		"typescript": "~4.6.2",
		"vite": "^3.0.0",
		"vitest": "^0.12.9"
	},
	"type": "module",
	"dependencies": {
		"@felte/reporter-svelte": "^1.1.2",
		"@felte/validator-zod": "^1.0.10",
		"@prisma/client": "^4.1.1",
		"@trpc/client": "^9.27.0",
		"@trpc/server": "^9.27.0",
		"agnostic-svelte": "^1.1.27",
		"bcrypt": "^5.0.1",
		"cookie": "^0.5.0",
		"felte": "^1.2.2",
		"shop": "link:",
		"tozod": "^3.0.0",
		"trpc-sveltekit": "^2.2.1",
		"uuid": "^8.3.2",
		"zod": "^3.16.0"
	}
}
